<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/imvVoltarCredito"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:src="@mipmap/arrowpointingtoright"
        android:gravity="top"/>

    <TextView
        android:drawableStart="@mipmap/credit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:text=" Comprar CrÃ©ditos credVAGO"
        android:gravity="center"/>

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/viewHorarioFuncionamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:text="@string/CredVago"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textAlignment="center" />

    <LinearLayout

        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/modelo_edit_blue"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:text="@string/Saldo" />

        <TextView
            android:id="@+id/viewSaldoCreditos"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/modelo_edit"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:hint=" R$0,00"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:onClick="onBuyCreditoButtonClicked"
            android:id="@+id/creditos5"
            android:clickable="true"
            android:text="+ R$    5,00"
            android:textColor="@color/colorWhite"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/circle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />

        <TextView
            android:onClick="onBuyCreditoButtonClicked"
            android:id="@+id/creditos10"
            android:clickable="true"
            android:text="+ R$  10,00"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:gravity="center"
            android:background="@drawable/circle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />

        <TextView
            android:onClick="onBuyCreditoButtonClicked"
            android:id="@+id/creditos15"
            android:clickable="true"
            android:text="+ R$  15,00"
            android:textColor="@color/colorWhite"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/circle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:onClick="onBuyCreditoButtonClicked"
            android:id="@+id/creditos20"
            android:clickable="true"
            android:text="+ R$   20,00"
            android:textColor="@color/colorWhite"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/circle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />

        <TextView
            android:onClick="onBuyCreditoButtonClicked"
            android:id="@+id/creditos40"
            android:clickable="true"
            android:text="+ R$  40,00"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:gravity="center"
            android:background="@drawable/circle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />

        <TextView
            android:onClick="onBuyCreditoButtonClicked"
            android:id="@+id/creditos60"
            android:clickable="true"
            android:text="+ R$  60,00"
            android:textColor="@color/colorWhite"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@drawable/circle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />

        </LinearLayout>

    <ImageView
        android:id="@+id/imvGoogleWallet"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:src="@mipmap/googlewallet"
        android:gravity="end"/>


    </LinearLayout>

</LinearLayout>
