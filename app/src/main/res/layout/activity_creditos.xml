<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:orientation="vertical"
    android:weightSum="1">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:src="@mipmap/arrowpointingtoright"
        android:gravity="top"/>

    <TextView
        android:drawableStart="@mipmap/credit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:text=" Créditos"
        android:gravity="center"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/viewCréditosAdquiridos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:padding="10dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:text="@string/CréditosAdquiridos" />

    <TextView
        android:background="@drawable/modelo_edit"
        android:layout_marginLeft="60dp"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:text=" R$ 0"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/viewCréditosUsados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:padding="10dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:text="@string/CréditosUsados" />

        <TextView
            android:background="@drawable/modelo_edit"
            android:layout_marginLeft="80dp"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:text=" R$ 0"/>

    </LinearLayout>

    <TextView
        android:id="@+id/viewHistórico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:padding="10dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:text="@string/Histórico" />

    <ScrollView
        android:background="@drawable/modelo_edit"
        android:layout_width="match_parent"
        android:layout_height="300dp"></ScrollView>


</LinearLayout>
