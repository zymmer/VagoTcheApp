<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="1">

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/viewModelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/Modelo" />

    <AutoCompleteTextView
        android:background="@drawable/modelo_edit"
        android:padding="10dp"
        android:id="@+id/ACviewModelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/Modelo" />

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/viewMarca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/Marca1" />

    <AutoCompleteTextView
        android:background="@drawable/modelo_edit"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/ACviewMarca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/Marca1" />

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/viewPlaca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/Placa1" />

    <EditText
        android:background="@drawable/modelo_edit"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/editPlaca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/Placa1" />

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/viewAno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/Ano" />

    <AutoCompleteTextView
        android:background="@drawable/modelo_edit"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/ACviewMarca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="@string/Ano" />

</LinearLayout>
