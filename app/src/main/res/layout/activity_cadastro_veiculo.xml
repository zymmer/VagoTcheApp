<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/side_nav_bar"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="1">

    <TextView
        android:drawableStart="@mipmap/cadastroveiculo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        android:text="Cadastro de Veículo"
        android:gravity="center"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:id="@+id/editPlaca"
            android:layout_width="181dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/modelo_edit"
            android:gravity="center"
            android:hint="Placa"
            android:padding="10dp"
            android:textAlignment="center"
            android:textStyle="bold" />

    <Button
        android:layout_marginLeft="10dp"
        android:clickable="true"
        android:background="@drawable/button_icons_bg"
        android:drawableEnd="@mipmap/carkey"
        android:id="@+id/btnLocalizarVeic"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Localizar meu Veículo" />

    </LinearLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/viewMarcas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:text="@string/Marca1" />

    <TextView
        android:textStyle="bold"
        android:background="@drawable/modelo_edit"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/TxtviewMarca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center" />

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/viewAno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:text="@string/Ano" />

    <TextView
        android:textStyle="bold"
        android:background="@drawable/modelo_edit"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/TxtviewAno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center" />

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/viewCor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:text="@string/Cor" />

    <TextView
        android:textStyle="bold"
        android:background="@drawable/modelo_edit"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:id="@+id/TxtviewCor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center" />

    <LinearLayout
        android:padding="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:clickable="true"
            android:background="@drawable/button_icons_bg"
            android:id="@+id/btnCancelarVeic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:drawableEnd="@mipmap/cross"
            android:text="Cancelar" />

        <Button
            android:clickable="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_icons_bg"
            android:id="@+id/btnRegistrarVeic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:drawableEnd="@mipmap/check"
            android:text="Registrar" />

    </LinearLayout>

    <Button
        android:clickable="true"
        android:background="@drawable/button_icons_bg"
        android:drawableEnd="@mipmap/carchanginglanes"
        android:id="@+id/btnAlterarVeic"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Meus Veículos" />

</LinearLayout>
