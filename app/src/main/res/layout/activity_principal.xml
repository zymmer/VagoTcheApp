<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.vagotche.vagotcheapp.MenuActivity"
    android:background="@drawable/side_nav_bar">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    <!--<include layout="@layout/content_menu"-->
        <!--android:id="@+id/include" />-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:drawableLeft="@mipmap/vagotcheestacionamento180x120px"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            android:gravity="center"/>

        </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/CreditosBtn"
            android:src="@mipmap/credit2"
            android:layout_height="200dp"
            android:layout_width="100dp"
            android:clickable="true"
            app:backgroundTint="@color/com_facebook_button_background_color_disabled"
            app:borderWidth="2dp"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/CadastroVeiculoBtn"
            android:src="@mipmap/cadastroveiculo"
            android:layout_height="200dp"
            android:layout_width="100dp"
            android:clickable="true"
            android:layout_marginLeft="20dp"
            app:backgroundTint="@color/com_facebook_button_background_color_disabled"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/ConfiguracaoAlertasBtn"
            android:src="@mipmap/alarm"
            android:layout_height="200dp"
            android:layout_width="100dp"
            android:clickable="true"
            android:layout_marginLeft="20dp"
            app:backgroundTint="@color/com_facebook_button_background_color_disabled"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/viewCredito"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:text="Comprar Créditos" />

        <TextView
            android:id="@+id/viewCadastroCarro"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Cadastrar Veículo"
            android:textAlignment="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewCidade"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textStyle="bold"
            android:layout_marginRight="20dp"
            android:text="Configurar Alertas" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/ZonaAzulBtn"
            android:src="@mipmap/zonaazul"
            android:layout_height="200dp"
            android:layout_width="100dp"
            android:clickable="true"
            app:backgroundTint="@color/com_facebook_button_background_color_disabled"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/googleMapsBtn"
            android:src="@mipmap/map"
            android:layout_height="200dp"
            android:layout_width="100dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:clickable="true"
            android:layout_marginLeft="20dp"
            app:backgroundTint="@color/com_facebook_button_background_color_disabled"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/IrregularidadesBtn"
            android:src="@mipmap/carcollision"
            android:layout_height="200dp"
            android:layout_width="100dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:clickable="true"
            android:layout_marginLeft="20dp"
            app:backgroundTint="@color/com_facebook_button_background_color_disabled"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/viewZonaAzul"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:text="Pagamento Zona Azul" />

        <TextView
            android:id="@+id/viewMaps"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Localizar Vaga"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/viewIrregularidades"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textStyle="bold"
            android:layout_marginRight="20dp"
            android:text="Irregularidades" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <android.support.v7.widget.AppCompatImageView
            android:src="@mipmap/mapmarkerblue"
            android:layout_height="50dp"
            android:layout_width="50dp"
            />

        <TextView
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_width="80dp"
            android:text="Em Manutenção"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <android.support.v7.widget.AppCompatImageView
            android:src="@mipmap/mapmarkergreen"
            android:layout_height="50dp"
            android:layout_width="50dp"
            />

        <TextView
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_width="70dp"
            android:text="Menos de 30% ocupado"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <android.support.v7.widget.AppCompatImageView
            android:src="@mipmap/mapmarkeryellow"
            android:layout_height="50dp"
            android:layout_width="50dp"
            />

        <TextView
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_width="70dp"
            android:text="Menos de 50% ocupado"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <android.support.v7.widget.AppCompatImageView
            android:src="@mipmap/mapmarkerorange"
            android:layout_height="50dp"
            android:layout_width="50dp"
            />

        <TextView
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_width="70dp"
            android:text="Menos de 80% ocupado"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <android.support.v7.widget.AppCompatImageView
            android:src="@mipmap/mapmarkerred"
            android:layout_height="50dp"
            android:layout_width="50dp"
            />

        <TextView
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_width="70dp"
            android:text="100% ocupado"/>

    </LinearLayout>

    </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
