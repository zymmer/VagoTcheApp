<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:weightSum="1">

    <TextView
        android:drawableLeft="@mipmap/parquimetro_40x40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        android:text="VagoTchê"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textStyle="bold"
        android:text="Localização de Vagas Urbanas"
        android:gravity="center"/>

    <EditText
        android:layout_marginTop="0dp"
        android:padding="10dp"
        style="@style/StyledTilEditText"
        android:id="@+id/editCPF1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/CPF"
        android:textColor="@color/colorWhite"
        android:inputType="number"
        android:textAlignment="center" />

    <EditText
        android:padding="10dp"
        style="@style/StyledTilEditText"
        android:id="@+id/editPassword1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Senha"
        android:textColor="@color/colorWhite"
        android:inputType="textPassword"
        android:textAlignment="center" />

    <Button
        android:clickable="true"
        android:background="@drawable/button_icons_bg"
        android:id="@+id/btnEntrar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:bufferType="@color/colorWhite"
        android:text="Entrar" />

    <TextView
        android:background="#66000000"
        android:id="@+id/txtCadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Não tem uma conta? Crie uma!"
        android:textColor="@color/colorWhite"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="1"
        android:layout_weight="0.17">

        <com.facebook.login.widget.LoginButton
            android:id="@+id/fbLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/ggLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" />

    </LinearLayout>
</LinearLayout>



