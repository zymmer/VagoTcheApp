<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.vagotche.vagotcheapp.MenuActivity"
    android:background="@drawable/gradient_background">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="www.vagotche.com.br"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_menu"
        android:id="@+id/include" />

    <!--Créditos -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginBottom="350dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:text="@string/Créditos"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="center_vertical|left" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/CreditosBtn"
        android:src="@mipmap/credit"
        android:layout_marginRight="250dp"
        android:layout_marginEnd="250dp"
        android:layout_marginBottom="250dp"
        android:layout_height="90dp"
        android:layout_width="70dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:clickable="true"
        app:backgroundTint="@color/corgoogleMapsBtn"
        />

    <!--Cadastro de Veiculo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:text="@string/CadastroVeículo"
        android:layout_marginBottom="350dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        app:layout_anchor="@+id/include"
        android:textStyle="bold"
        app:layout_anchorGravity="center_vertical|center_horizontal" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/CadastroVeiculoBtn"
        android:src="@mipmap/cadastroveiculo"

        android:layout_marginBottom="250dp"
        android:layout_height="90dp"
        android:layout_width="70dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:clickable="true"
        app:backgroundTint="@color/corgoogleMapsBtn"
        />

    <!--Configuração de Alertas -->
    <TextView
        android:layout_width="85dp"
        android:layout_height="32dp"
        android:text="@string/ConfiguracaoAlertas"
        android:layout_marginBottom="340dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="15dp"
        app:layout_anchor="@+id/include"
        android:textStyle="bold"
        app:layout_anchorGravity="center_vertical|right" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ConfiguracaoAlertasBtn"
        android:src="@mipmap/alarm"
        android:layout_width="80dp"
        android:layout_marginLeft="250dp"
        android:layout_marginStart="250dp"
        android:layout_marginBottom="250dp"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:clickable="true"
        app:backgroundTint="@color/corgoogleMapsBtn"
        />

    <!--Zona Azul -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_gravity="bottom|center_horizontal"
        android:text="@string/ZonaAzul"
        app:layout_anchor="@+id/include"
        android:textStyle="bold"
        app:layout_anchorGravity="center_vertical|left" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ZonaAzulBtn"
        android:src="@mipmap/estacionamento"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginRight="250dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:clickable="true"
        app:backgroundTint="@color/corgoogleMapsBtn"
        />

    <!--Navegar -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:text="@string/Navegar"
        app:layout_anchor="@+id/include"
        android:textStyle="bold"
        app:layout_anchorGravity="center_vertical|center_horizontal" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/googleMapsBtn"
        android:src="@mipmap/parquimetro_40x40"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:clickable="true"
        app:backgroundTint="@color/corgoogleMapsBtn"
       />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/teste6Btn"
        android:layout_width="100dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:clickable="true"
        app:backgroundTint="@color/corgoogleMapsBtn"
        />

</android.support.design.widget.CoordinatorLayout>
